<div class="row clearfix">
 <% if todo_item.completed? %>
   <div class="complete">
    <%= form_for [@todo_list, todo_item], url: complete_todo_list_todo_item_path(@todo_list, todo_item), method: :patch do |form| %>
      <%= form.submit "Mark as Complete" %>
    <% end %>
   </div>
   <div class="todo_item">
    <p style="opacity: 0.4;">
      <strike><%= todo_item.content %></strike>
    </p>
    </div>
    <div class="trash">
    <%= form_for([@todo_list, todo_item], method: :delete , data: { confirm: "Are you sure?" }) do |form| %>
    <%= form.submit "Delete"  %>
    <% end %>
    </div>
  <% else %>
  <div class="complete">
    <%= form_for [@todo_list, todo_item], url: complete_todo_list_todo_item_path(@todo_list, todo_item), method: :patch do |form| %>
      <%= form.submit "Mark as Complete" %>
    <% end %>
   </div>
   <div class="todo_item">
    <p>
      <%= todo_item.content %>
    </p>
    </div>
    <div class="trash">
    <%= form_for([@todo_list, todo_item], method: :delete , data: { confirm: "Are you sure?" }) do |form| %>
    <%= form.submit "Delete"  %>
    <% end %>
    </div>
  <% end %>
</div>

